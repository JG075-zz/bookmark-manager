<!DOCTYPE html>
<html>
  <body>
    <h1>Bookmark Manager</h1>
        <ul id='links'>
        <% @links.each do |link| %>
        <li>
          Title: <%=link.title%>
          URL: <a href="<%=link.url%>"><%=link.url%></a>
          Tags: <% link.tags.each do |tag| %>
          <%= "#{tag.name}" %><% unless tag.equal? link.tags.last %><%= "," %><% end %>
          <% end %>
        </li>
        <% end %>
      </ul>
    <a href="/links/new"><button>Add new link</button></a>
    <a href="/users/new"><button>Sign up</button></a>
  </body>
</html>
